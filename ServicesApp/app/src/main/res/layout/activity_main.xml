<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="8dip"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/enterPdfFile1"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_alignBaseline="@+id/pdfFile1"
                android:layout_alignParentRight="false"
                android:layout_marginTop="164dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="180dp"
                android:layout_toRightOf="@+id/pdfFile1"
                android:gravity="left"
                android:background="@android:color/white"
                android:textSize="20dp"
                android:inputType="textUri" />

        </LinearLayout>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dip"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp"
            android:text="PDF Download Activity"
            android:paddingLeft="28dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="25dp"/>


        <ImageView
            android:id="@+id/test_button_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/android" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentRight="false"
            android:text="Please provide list of five SJSU PDF's to download * hardcode of files is file! or you can provide full qualified names..."
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/pdfFile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/titleTextView"
            android:gravity="left"
            android:padding="4dip"
            android:text="PDF1 File Location:"
            android:textColor="@android:color/white"
            android:textSize="19dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pdfFile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/pdfFile1"
            android:gravity="left"
            android:padding="4dip"
            android:text="PDF2 File Location:"
            android:textColor="@android:color/white"
            android:textSize="19dp"
            android:textStyle="bold" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/enterPdfFile2"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_alignBaseline="@+id/pdfFile2"
                android:layout_alignParentRight="false"
                android:layout_marginTop="220dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="180dp"
                android:layout_toRightOf="@+id/pdfFile2"
                android:gravity="left"
                android:background="@android:color/white"
                android:textSize="20dp"
                android:inputType="textUri" />

        </LinearLayout>

        <TextView
            android:id="@+id/pdfFile3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/pdfFile2"
            android:gravity="left"
            android:padding="4dip"
            android:text="PDF3 File Location:"
            android:textColor="@android:color/white"
            android:textSize="19dp"
            android:textStyle="bold" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/enterPdfFile3"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_alignBaseline="@+id/pdfFile3"
                android:layout_alignParentRight="false"
                android:layout_marginTop="275dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="180dp"
                android:layout_toRightOf="@+id/pdfFile3"
                android:gravity="left"
                android:background="@android:color/white"
                android:textSize="20dp"
                android:inputType="textUri" />
        </LinearLayout>

        <TextView
            android:id="@+id/pdfFile4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/pdfFile3"
            android:gravity="left"
            android:padding="4dip"
            android:text="PDF4 File Location:"
            android:textColor="@android:color/white"
            android:textSize="19dp"
            android:textStyle="bold" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/enterPdfFile4"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_alignBaseline="@+id/pdfFile4"
                android:layout_alignParentRight="false"
                android:layout_marginTop="330dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="180dp"
                android:layout_toRightOf="@+id/pdfFile4"
                android:gravity="left"
                android:background="@android:color/white"
                android:textSize="20dp"
                android:inputType="textUri" />
        </LinearLayout>

        <TextView
            android:id="@+id/pdfFile5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/pdfFile4"
            android:gravity="left"
            android:padding="4dip"
            android:text="PDF5 File Location:"
            android:textColor="@android:color/white"
            android:textSize="19dp"
            android:textStyle="bold" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/enterPdfFile5"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_alignBaseline="@+id/pdfFile5"
                android:layout_alignParentRight="false"
                android:layout_marginTop="383dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="180dp"
                android:layout_toRightOf="@+id/pdfFile5"
                android:gravity="left"
                android:background="@android:color/white"
                android:textSize="20dp"
                android:inputType="textUri" />
        </LinearLayout>

        <Button
            android:id="@+id/download"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_below="@+id/pdfFile5"
            android:layout_alignParentRight="false"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="30dp"
            android:background="@android:color/holo_orange_light"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Start Download"
            android:onClick="startDownload"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

    </RelativeLayout>

</LinearLayout>


